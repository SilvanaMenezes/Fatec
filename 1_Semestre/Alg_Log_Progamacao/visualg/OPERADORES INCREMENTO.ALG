Algoritmo "Operadores Incremento"

Var
numero: inteiro
valor: inteiro


Inicio
//valor inicial
numero <-5;
Escreval("numero = ", numero)

//acrécimo
numero <- numero + 1;
Escreval("numero = ", numero)

//decrécimo
numero <- numero -1;
Escreval("numero = ", numero)

//desafio um
valor <-5;
valor <- valor + valor +1
Escreval(valor)

//desafio dois
valor <-valor -1
Escreval(valor)


Fimalgoritmo